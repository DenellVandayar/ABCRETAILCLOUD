@{
    ViewData["Title"] = "Stock Limit Exceeded";
    var availableQuantity = ViewBag.AvailableQuantity;
    var requestedQuantity = ViewBag.RequestedQuantity;
}

<div class="container">
    <h2>Stock Limit Exceeded</h2>
    <div class="alert alert-danger">
        <p>We're sorry, but you have requested <strong>@requestedQuantity</strong> units of this item, and only <strong>@availableQuantity</strong> units are available in stock.</p>
    </div>
    <a href="@Url.Action("Index", "Items")" class="btn btn-primary">Return to Items</a>
</div>
