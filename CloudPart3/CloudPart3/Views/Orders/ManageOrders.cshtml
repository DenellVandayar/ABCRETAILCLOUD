@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@model IEnumerable<CheckoutOrders>

@{
    ViewData["Title"] = "Track Orders";
}

<div class="container">
    <h2>Manage Orders</h2>

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.ItemName</td>
                        <td>@order.quantity</td>
                        <td>$@order.TotalPrice</td>
                        <td>@order.CheckoutDateTime.ToString("g")</td>
                         <td>
                            @if (order.OrderStatus == "Not Processed")
                            {
                                <span style="color: red; font-weight: bold;">Not Processed</span>
                            }
                            else
                            {
                                <span style="color: green; font-weight: bold;">Processed</span>
                            }
                        </td>
                        <td>
                        <td>
                            @if (order.OrderStatus == "Not Processed")
                            {
                               
                                <form asp-action="ProcessOrder" method="post">
                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                    <button type="submit" class="btn btn-success">Process</button>
                                </form>
                            }
                            else
                            {
                                <span style="color: black; font-weight: bold;" class="badge badge-success">Processed</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders to display.</p>
    }
</div>
