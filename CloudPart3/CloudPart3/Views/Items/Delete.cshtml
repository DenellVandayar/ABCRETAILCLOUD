@{
    ViewData["Title"] = "Delete Item";
}
@model Items

<h2>Delete Item</h2>

<div>
    <h4>Are you sure you want to delete this item?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Image</dt>
        <dd class = "col-sm-10">
            @if (Model.ImageData != null)
            {
                <img src="@Url.Action("GetImage", "Items", new { id = Model.Item_Id })" alt="@Model.Name" style="max-width:200px;" />
            }
            else
            {
                <p>No Image Available</p>
            }
        </dd>

        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Model.Name</dd>

        <dt class = "col-sm-2">Description</dt>
        <dd class = "col-sm-10">@Model.Description</dd>

        <dt class = "col-sm-2">Price</dt>
        <dd class = "col-sm-10">$@Model.Price</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Item_Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManageItems" class="btn btn-secondary">Cancel</a>
    </form>
</div>

