@{
    ViewData["Title"] = "Manage Items";
}
@model IEnumerable<CloudPart3.Models.Items>

<h1>Manage Items</h1>
<a href="@Url.Action("AddItem","Items")" class="btn btn-primary">Add New Item</a>


<h2>All Items</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Available Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.ImageData != null)
                        {
                            <img src="@Url.Action("GetImage", "Items", new { id = item.Item_Id })" alt="@item.Name" style="max-width:100px;" />
                        }
                        else
                        {
                            <p>No Image</p>
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>$@item.Price</td>
                    <td>@item.AvailableQuantity</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Item_Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                            Delete
                        </a>
                        <a asp-action="EditItem" asp-route-id="@item.Item_Id" class="btn btn-secondary" onclick="return confirm('Are you sure you want to edit this item?');">
                            Edit Item
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">
                    No items available.
                </td>
            </tr>
        }
    </tbody>
</table>
