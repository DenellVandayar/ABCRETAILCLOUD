@{
}
@model IEnumerable<CheckoutOrders>

@{
    ViewData["Title"] = "Track Orders";
}

<div class="container">
    <h2>Track Orders</h2>

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.ItemName</td>
                        <td>@order.quantity</td>
                        <td>$@order.TotalPrice</td>
                        <td>@order.CheckoutDateTime.ToString("g")</td>
                        <td>
                            @if (order.OrderStatus == "Not Processed")
                            {
                                <span style="color: red; font-weight: bold;">Not Processed</span>
                            }
                            else
                            {
                                <span style="color: green; font-weight: bold;">Processed</span>
                            }
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders to display.</p>
    }
</div>