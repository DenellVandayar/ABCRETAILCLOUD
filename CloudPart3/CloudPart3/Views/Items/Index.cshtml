@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<CloudPart3.Models.Items>

<h1>Available Items!</h1>
<hr />
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    @if (item.ImageData != null)
                    {
                        <img src="@Url.Action("GetImage", "Items", new { id = item.Item_Id })" alt="@item.Name" class="card-img-top" style="width:100%;height:300px;"  />
                    }
                    else
                    {
                        <p>No Image</p>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                        <p class="card-text"><strong>Stock:</strong> @item.AvailableQuantity</p>
                        @if (item.AvailableQuantity==0)
                        {
                            <span class="text-danger">Out of Stock</span>
                        }
                        else
                        {
                            <a href="@Url.Action("OrderItem", "Orders", new { itemId = item.Item_Id })" class="btn btn-primary">Order</a>
                        }
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>
