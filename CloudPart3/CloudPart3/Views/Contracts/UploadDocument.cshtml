@{
    ViewData["Title"] = "Upload Document";
}

<h2>Upload Contracts</h2>

<form asp-action="UploadDocument" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="documentFile">Select Document</label>
        <input type="file" name="documentFile" class="form-control" accept=".pdf,.doc,.docx,.txt" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload Document</button>
</form>
