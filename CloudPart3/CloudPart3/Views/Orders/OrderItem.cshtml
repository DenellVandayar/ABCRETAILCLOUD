@{
}
@model CloudPart3.Models.CartOrders // Update with your namespace

<div class="container">
    <h2>Order @Model.ItemName</h2>
    <form asp-action="PlaceOrder" method="post">
        <input type="hidden" asp-for="ItemId" />  <!-- Hidden input for the Item ID -->

        <div class="form-group">
            <label>Quantity</label>
            <input type="number" asp-for="quantity" class="form-control" min="1" required />
        </div>

        <div class="form-group">
            <label>Address</label>
            <input type="text" name="Address" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Phone Number</label>
            <input type="tel" name="PhoneNumber" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Confirm Order</button>
    </form>
</div>
